<%- contentFor('HeaderCss') %>

<!-- Sweet Alert-->
<link href="public/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

<%- contentFor('breadcrumb') %>

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Categories</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>

<div class="row">

        <% if(error.length> 0) { %>
            <div class="alert alert-danger text-center mb-4 flash alert-dismissible" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        <% } %>
        <% if(message.length> 0) { %>
            <div class="alert alert-success text-center mb-4 flash alert-dismissible" role="alert">
                <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        <% } %>
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">                
                <div class="table-responsive">
                    <table class="table mb-0 table-bordered table-hover" style="text-align: center;">

                        <thead class="table-light">
                            <tr>
                                <th>No</th>
                                <th>Category Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.map((category, i) => { %>
                                <tr>
                                    <th scope="row"><%= i + 1 %></th>
                                    <td><%= category.categoryName %></td>
                                    <td>
                                        <button type="button" data-id="<%= category.id %>" class="sa-warning btn btn-outline-danger btn-sm waves-effect waves-light">Delete</button>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title" style="text-align: center">New Category</h2>
                <hr />
                <form method="post" action="/categories/create">
                    <div class="row">      
                        <input type="text" class="form-control" name="categoryName" placeholder="Enter Category Name" required="" />
                    </div>
                    <br />
                    <div class="row">      
                        <button type="submit" class="btn btn-primary w-md">Submit</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>
<!-- Sweet Alerts js -->
<script src="public/assets/libs/sweetalert2/sweetalert2.min.js"></script>

<!-- Sweet alert init js-->
<script>
    $(document).ready(function(){
        $('.sa-warning').click(function () {
            const categoryId = $(this).data('id');
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#34c38f",
                cancelButtonColor: "#f46a6a",
                confirmButtonText: "Yes, delete it!"
              }).then(function (result) {
                if (result.value) {
                    $.ajax({
                        url: '/categories/delete',
                        type: 'post',
                        data: {
                            categoryId: categoryId
                        },
                        success: function(res){
                            Swal.fire("Deleted!", "Your file has been deleted.", "success").then(function(){
                                location.reload();
                            });
                        },
                        error: function(error){
                            Swal.fire({
                                title: 'Failed',
                                text: 'Delete Failed.',
                                icon: 'error'
                            })
                        }
                    })
                }
            });
        });
    })
</script>

<%- contentFor('BottomJs') %>